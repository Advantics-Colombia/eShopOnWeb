# Staging Environment Configuration
environment         = "staging"
resource_group_name = "rg-eshoponweb"
location            = "East US"

# AKS Configuration
cluster_name       = "aks-eshoponweb"
kubernetes_version = "1.28"
node_count         = 2
vm_size            = "Standard_D2s_v3"

# Autoscaling
enable_auto_scaling = true
min_node_count      = 2
max_node_count      = 4

# Network
vnet_address_space = ["10.1.0.0/16"]
subnet_prefixes = {
  aks     = "10.1.1.0/24"
  gateway = "10.1.2.0/24"
}

# ACR
acr_sku = "Standard"

tags = {
  Environment = "Staging"
  Application = "eShopOnWeb"
  ManagedBy   = "Terraform"
}
